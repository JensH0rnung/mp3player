<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!-- fx:controller="presentation.ui_components.playerControls.ControlViewController -->

<HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="ShuffleButton" onAction="#handle" alignment="CENTER" mnemonicParsing="false" text="Shuffle" shape="circle"/>
      <Button fx:id="SkipBackButton" onAction="#handle" alignment="CENTER" mnemonicParsing="false" text="Back" />
      <Button fx:id="PlayPauseButton" onAction="#handle" alignment="CENTER" mnemonicParsing="false" text="Play / Pause">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="SkipButton" onAction="#handle" alignment="CENTER" mnemonicParsing="false" text="Skip" />
      <Button fx:id="RepeatButton" onAction="#handle" alignment="CENTER" mnemonicParsing="false" text="Repeat" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
